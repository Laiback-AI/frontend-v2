{
  "compilerOptions": {
    // Specify which JavaScript language features you want to use
    "lib": [
      "dom", // Includes DOM APIs like document, window, etc.
      "dom.iterable", // Adds support for iterable DOM collections (like NodeLists)
      "esnext" // Uses the latest ECMAScript features
    ],
    // Allows the inclusion of JavaScript files in the TypeScript project
    "allowJs": true,
    // Skips type checking of declaration files (.d.ts)
    "skipLibCheck": true,
    // Enables strict type checking mode (ensures robust type checking)
    "strict": true,
    // Prevents emitting any output (useful if you're only type-checking)
    "noEmit": true,
    // Ensures compatibility with ES modules
    "esModuleInterop": true,
    // Specifies the module code generation method: 'esnext' generates ESNext style imports/exports
    "module": "esnext",
    // Tells TypeScript how modules are resolved (in this case, Node.js style module resolution)
    "moduleResolution": "node",
    // Allows importing .json files
    "resolveJsonModule": true,
    // Forces isolation of each module by default, avoids global namespace pollution
    "isolatedModules": true,
    // Specifies how JSX should be treated in .tsx files
    "jsx": "preserve",
    // Enables incremental type checking and builds, useful for large projects
    "incremental": true,
    // Configures plugins (for example, enabling the Next.js plugin)
    "plugins": [
      {
        "name": "next" // Next.js plugin for enhancing the TypeScript experience
      }
    ],
    // Configures path mapping for modules, simplifying imports
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*" // Maps `@/` to the `src/` folder
      ],
      "@/components/*": [
        "src/components/*" // Maps `@/components/` to the `src/components/` folder
      ],
      "@/features/*": [
        "src/features/*" // Maps `@/features/` to the `src/features/` folder
      ],
      "@/api/*": [
        "src/api/*" // Maps `@/api/` to the `src/api/` folder
      ],
      "@/types/*": [
        "src/types/*" // Maps `@/types/` to the `src/types/` folder
      ],
      "@/state/*": [
        "src/state/*" // Maps `@/state/` to the `src/state/` folder
      ],
      "@/ui/*": [
        "src/ui/*" // Maps `@/ui/` to the `src/ui/` folder
      ]
    },
    // Adds additional global type definitions
    "types": [
      "node"
    ] // Remove "msw" from types
    ,
    "target": "ES2017"
  },
  "include": [
    // Specifies which files are included in the project
    "next-env.d.ts",
    "**/*.ts", // Include all .ts files
    "**/*.tsx", // Include all .tsx files (TypeScript with JSX)
    ".next/types/**/*.ts" // Include TypeScript types generated by Next.js
  ],
  "exclude": [
    // Excludes node_modules to improve performance
    "node_modules"
  ]
}
